#include <bits/stdc++.h> 
using namespace std; 
  
int main() 
{ 
	int n;
	cout<<"Enter the number of element in array ";
	cin>>n;
	
    int arr[n];
    cout<<"Enter the elements of array ";
	for(int i=0;i<n;i++)
		cin>>arr[i]; 
  
    
    cout << "Array: "; 
    for (int i = 0; i < n; i++) 
        cout << arr[i] << " "; 
  
    cout << "\nMin Element = "
         << *min_element(arr, arr + n); 
  
    cout << "\nMax Element = "
         << *max_element(arr, arr + n); 
    return 0; 
} 
